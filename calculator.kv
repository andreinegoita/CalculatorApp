BoxLayout:
    orientation: "vertical"
    padding: 10
    spacing: 10

    Label:
        id: result_label
        text: "0"
        font_size: 48
        size_hint: (1, 0.3)
        color: 1, 1, 1, 1  # Alb
        bold: True
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    GridLayout:
        cols: 4
        padding: [10, 10]
        spacing: 10
        size_hint: (1, 0.7)

